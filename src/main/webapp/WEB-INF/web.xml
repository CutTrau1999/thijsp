<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreatePhoneController</servlet-name>
        <servlet-class>com.example.thijsp.controller.CreatePhoneController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePhoneController</servlet-name>
        <url-pattern>/phone/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListPhoneController</servlet-name>
        <servlet-class>com.example.thijsp.controller.ListPhoneController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPhoneController</servlet-name>
        <url-pattern>/phone/list</url-pattern>
    </servlet-mapping>
</web-app>